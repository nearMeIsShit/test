/**chat.wxss**/
.container{
  margin:0;
  padding:0;
}
.chat_box{
  width:100%;
  box-sizing: border-box;
  padding:30rpx 20rpx 108rpx;
}
.chat_list{
  overflow: hidden;
  margin-bottom:30rpx;
}
.chat_list image{
  width:80rpx;
  height:80rpx;
}
.server_chat image{
  float:left
}
.visitor_chat image{
  float:right;
}
.chat_list .chat_cont{
  padding:25rpx 30rpx;
  min-width:20%;
  max-width:62%;
  position:relative;
  color:#333;
  font-size:30rpx;
  border-radius:20rpx;
  word-wrap:break-word;
  word-break:break-all;
}
.server_chat .chat_cont{
  float:left;
  margin-left:20rpx;
  background: #edf2f7;
}
.server_chat .chat_cont:after{
  display: block;
  content: "";
  position: absolute;
  width: 0;
  height: 0;
  border-width:6rpx 14rpx;
  border-style:solid;
  top:37rpx;
  left:-25rpx;
  border-color:transparent #edf2f7 transparent transparent;
}
.visitor_chat .chat_cont{
  float:right;
  background: #cfedfb;
  margin-right:20rpx;
}
.visitor_chat .chat_cont:after{
  display: block;
  content: "";
  position: absolute;
  width: 0;
  height: 0;
  border-width:6rpx 14rpx;
  border-style:solid;
  top:37rpx;
  right:-25rpx;
  border-color:transparent transparent transparent #cfedfb;
}
.chat_cont image{
  width:40rpx;
  height:40rpx;
}
/**input_box**/
.input_box{
  width:100%;
  height:108rpx;
  position:fixed;
  bottom:0;
  left:0;
  z-index:999;
  background: #e5e5e5;
}
.input_box image{
  width:48rpx;
  height:48rpx;
  margin:30rpx;
  float:left;
  cursor:pointer;
}
.input_box .send{
  float: right;
}
.input_box .input{
  float:left;
  box-sizing:border-box;
  width:534rpx;
  height:80rpx;
  margin-top:14rpx;
  border:2rpx solid #d0d7d8;
  border-radius: 10rpx;
  background:#fff;
  position: relative;
}
.input_box .input input{
  width:85%;
  height:76rpx;
  line-height:76rpx;
  margin-left:30rpx;
}
.input_box .input .usevoice{
  position:absolute;
  width:534rpx;
  height:80rpx;
  line-height: 80rpx;
  text-align:center;
  background: #eee;
  border:2rpx solid #d0d7d8;
  border-radius: 10rpx;
  top:-2rpx;
  left:-2rpx;
  z-index:99;
}

.speak-style{
    position: fixed;
    height: 240rpx;
    width: 240rpx;
    border-radius: 20rpx;
    top:50%;
    left:50%;
    -webkit-transform:translate(-50%,-50%);
    transform:translate(-50%,-50%);
    background: #638f92;
}
.sound-style{
  position: absolute;
  width: 74rpx;
  height:150rpx;
  margin-top: 45rpx;
  margin-left: 83rpx;
}